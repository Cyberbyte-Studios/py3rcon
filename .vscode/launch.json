{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Py3rcon",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/py3rcon.py",
            "args": [
                "config.json"
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit"
            ]
        },
        {
            "name": "Py3rcon GUI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/py3rcon.py",
            "args": [
                "-g",
                "config.json"
            ],
            "console": "externalTerminal",
            "debugOptions": [
                "BreakOnSystemExitZero",
                "WaitOnAbnormalExit"
            ]
        },
        {
            "name": "Py3rcon WEB",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/py3rcon.py",
            "args": [
                "-w",
                "config.json"
            ],
            "console": "integratedTerminal",
            "debugOptions": [
                "BreakOnSystemExitZero",
                "WaitOnAbnormalExit"
            ]
        }
    ]
}