{
    "logfile":"pyrcon.test.log",
    "loglevel": 10,
    "server": {
	"host":"127.0.0.1",
	"port":2402,
	"rcon_password":"yourRconPassword"
    },
    "commands": "commands.json",
    "restart": {
	"interval": 240,
	"exitonrestart": true,
	"messages": [
