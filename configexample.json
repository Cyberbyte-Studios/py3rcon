	    [ 3, "RESTART IN 3 MINUTES" ],
	    [ 1, "RESTART IN 1 MINUTE"  ]
	]
    },
    "repeatMessage":{
	"interval": 20,
	"messages": [
	    "This Server is using PYRCON.py (python3rcon)",
	    "Authors: indepth666 (python3rcon), ole1986 (CLI)",
            "Github: https://github.com/indepth666/python3rcon",
            "Github(forked): https://github.com/ole1986/python3rcon"
	]
    }
}
